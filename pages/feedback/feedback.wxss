
.introduction{
  width: 100%;
  height: auto;
  line-height: 35rpx;
  border-bottom: 1rpx solid #e5e5e5;
  
  
}

.introduction .title{
  width: 100%;
  height: 93rpx;
  background: #fbfafa;
}

.introduction .title>view{
  width: 94%;
  height: 93rpx;
  margin:0 auto;
  font-family: SourceHanSansCN-Regular;
	font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #888888;
  line-height: 120rpx;
}

.introduction textarea{
  width: 94%;
  height: 338rpx;
  margin:0 auto;
  font-family: SourceHanSansCN-Regular;
	font-size: 34rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #000;
  margin-top: 30rpx;
  word-break:break-all;
}

.len{
  width: 94%;
  height: 50rpx;
  margin: 0 auto;
  font-family: SourceHanSansCN-Regular;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #9b9b9b;
  text-align: right;

}

.button{
  width: 94%;
	height: 88rpx;
  margin:0 auto;
	background-color: #6ac4d2;
	border-radius: 10rpx;
  margin-top: 50rpx;
  text-align: center;
  font-family: SourceHanSansCN-Regular;
	font-size: 36rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #ffffff;
  line-height: 88rpx;
}

.mobile{
  width:100%;
  height: 72rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.mobile>view{
  width: 94%;
  height: 72rpx;
  margin: 0 auto;
}
.mobile>view>.left{
  width: 30%;
  height: 72rpx;
  float: left;
  line-height: 72rpx;
  font-family: SourceHanSansCN-Regular;
	font-size: 34rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #000000;
}
.mobile>view>.right{
  width:70%;
  height: 72rpx;
  float: right;
}
.mobile>view>.right input{
  width:100%;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 34rpx;
}