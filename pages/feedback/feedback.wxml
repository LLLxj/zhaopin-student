<view class='body'>
<form bindsubmit="formSubmit">
    <view class='content'>
      <view class='introduction'>
          <textarea placeholder="请填写10个字以上的问题描述以便我们提供更好的帮助。" value='{{text}}' name="opinion" maxlength="500" bindinput="textchange"></textarea>
           <view class='len'>{{textlen}}/500</view>
      </view>
      <view class='mobile'>
        <view>
          <view class='left'>联系方式</view>
          <view class='right'><input name="contact" placeholder='手机/邮箱'/></view>
        </view>
      </view>
    </view>
     <button form-type="submit" class='button'>提交</button>
</form>
</view>