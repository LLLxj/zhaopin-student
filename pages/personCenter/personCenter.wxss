.confirmtop{
   position:fixed;
   background: #000;
   top:0;
   left: 0;
   right: 0;
   bottom: 0;
    z-index: 9999; 
   background-color:rgba(0,0,0,0.2); 
}
.confirm{
  width:80%;
  height: auto;
  margin:0 auto;
   position:fixed; 
