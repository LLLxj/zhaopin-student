  margin-bottom: 30rpx;
  
}
.confirm>.button{
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #eee;
}
.confirm>.button>.left,.confirm>.button>.right{
  width: 49.5%;
  height: 100rpx;
  float: left;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  font-weight:bold;

}
.confirm>.button>.center{
  width: 1rpx;
  height: 100rpx;
  margin:0 auto;
  float: left;
  background: #eee;
}
.confirm>.button>.right{
  float: right;
}

